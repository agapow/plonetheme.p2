<?xml version="1.0"?>
<object name="portal_skins" allow_any="False" cookie_persistence="False"
   default_skin="P2 theme">

 <object name="plonetheme_p2_custom_images"
    meta_type="Filesystem Directory View"
    directory="plonetheme.p2:skins/plonetheme_p2_custom_images"/>
 <object name="plonetheme_p2_custom_templates"
    meta_type="Filesystem Directory View"
    directory="plonetheme.p2:skins/plonetheme_p2_custom_templates"/>
 <object name="plonetheme_p2_styles"
    meta_type="Filesystem Directory View"
    directory="plonetheme.p2:skins/plonetheme_p2_styles"/>

 <skin-path name="P2 theme" based-on="Plone Default">
  <layer name="plonetheme_p2_custom_images"
     insert-after="custom"/>
  <layer name="plonetheme_p2_custom_templates"
     insert-after="plonetheme_p2_custom_images"/>
  <layer name="plonetheme_p2_styles"
     insert-after="plonetheme_p2_custom_templates"/>
 </skin-path>

</object>
